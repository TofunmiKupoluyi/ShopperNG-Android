<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tofun.shopperng.phonesTabletsFragment"

    >


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleTopPhonesTablets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phones/Tablets"
            android:textSize="20dp"
            android:textAlignment="center" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_below="@id/titleTopPhonesTablets"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/phonesTabletsItemsGrid"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"

        >

    </GridView>

</LinearLayout>
